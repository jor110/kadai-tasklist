<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
  <%= f.label :status,'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.label :content,'タスク名' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>