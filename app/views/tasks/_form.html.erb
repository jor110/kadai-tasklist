<% if task.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<%= form_for(task) do |f| %>
  <%= f.label :status,'ステータス' %>
  <%= f.text_field :status %>
  <br>
  <%= f.label :content,'タスク名' %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit '投稿' %>
<% end %>